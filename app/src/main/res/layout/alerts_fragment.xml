<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alerts_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.alerts.AlertsFragment">

    <ImageButton
        android:id="@+id/tph_button"
        android:layout_width="324dp"
        android:layout_height="162dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="48dp"
        android:background="@color/material_on_primary_disabled"
        android:src="@drawable/component_17_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/air_quality_button"
        android:layout_width="324dp"
        android:layout_height="162dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="48dp"
        android:background="@color/material_on_primary_disabled"
        android:src="@drawable/component_16_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tph_button" />

    <ImageButton
        android:id="@+id/motion_detection_button"
        android:layout_width="324dp"
        android:layout_height="162dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="48dp"
        android:background="@color/material_on_primary_disabled"
        android:src="@drawable/component_15_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/air_quality_button" />
</androidx.constraintlayout.widget.ConstraintLayout>